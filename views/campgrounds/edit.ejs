<%- include('../partials/header') %>

<div class="container">
  <div class="row">
  
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>

    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>?_method=put" method="post">
        <div class="form-group">
          <input type="text" name="campground[name]" id="name" class="form-control" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input type="text" name="campground[image]" id="image" class="form-control" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input type="text" name="campground[description]" id="description" class="form-control" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>

  </div>
</div>

<%- include('../partials/footer') %>